# ============================================
# CMPC LIMS Backend Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-frontend-url.railway.app

# Database - PostgreSQL
# Railway will provide this automatically
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
# Generate secure random strings for production:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# Password Hashing
BCRYPT_ROUNDS=12

# AWS S3 (Optional - for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Email Notifications (SMTP)
# For Gmail: Use App Password (requires 2FA enabled)
# For SendGrid: Use API key as password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-or-api-key
SMTP_FROM=noreply@cmpc.cl

# Monday.com Integration (Optional)
MONDAY_API_KEY=
MONDAY_BOARD_IDS=

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================
# Railway-specific notes:
# ============================================
# - DATABASE_URL is automatically provided by Railway PostgreSQL addon
# - PORT is automatically set by Railway (default 3000)
# - Set FRONTEND_URL to your Railway frontend URL after deployment
# - All other variables must be configured in Railway's environment variables section
