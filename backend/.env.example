# ============================================
# CMPC LIMS Backend Environment Variables
# ============================================

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database - PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/cmpc_lims?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# Bcrypt
BCRYPT_ROUNDS=12

# AWS (Optional - for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@cmpc.cl

# Monday.com (for migration)
MONDAY_API_KEY=
MONDAY_BOARD_IDS=

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
